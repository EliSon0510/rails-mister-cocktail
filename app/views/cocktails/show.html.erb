
<div class="cocktail-banner" style="background-image: cl_image-tag('icecubes_bckgnd_Cocktail_gshisu', crop: :fill) linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.3));">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <p>perfect choice ! Let's do this !</p>
  </div>
</div>


<div class="ingredients">
  <h4>Ingredients</h4>
  <% @cocktail.doses.each do |dose| %>
    <li><%= "#{dose.ingredient.name} - #{dose.description}" %></li>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
    <% end %>
  <% end %>
</div>

<br>
<%= link_to("Add dose", new_cocktail_dose_path(@cocktail)) %>
<br>
<%= link_to("Back to list", root_path) %>


